BIND_RELEASE_URL="$BIND_MIRROR/biotek/cnkeeper/donaldson3/DATA/BIND/02_08_2010/"
BIND_DIR_NAME="BIND"
BIND_OTHER_FILE_PATTERN='*.txt'
BIND_PARSER='irdata_parse_bind.sh'
BIND_SCHEMA='bind'

