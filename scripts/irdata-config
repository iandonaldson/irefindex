FLY_SCHEMA='fly'

FLY_MANIFEST_PARSER='irdata_manifest_fly.sh'
FLY_MANIFEST_FILE='fly.txt'

############################################################
# UniProt (Yeast)

YEAST_DOWNLOAD_FILES="yeast.txt"
